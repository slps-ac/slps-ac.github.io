<script src="https://stackpath.herokuapp.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
    const carousel = document.getElementById('imageCarousel');
    let scrollAmount = 0;

    function slideLeft() {
        carousel.scrollBy({
            top: 0,
            left: -carousel.clientWidth / 3, // Scroll one-third of the carousel width to the left
            behavior: 'smooth'
        });
    }

    function slideRight() {
        carousel.scrollBy({
            top: 0,
            left: carousel.clientWidth / 3, // Scroll one-third of the carousel width to the right
            behavior: 'smooth'
        });
    }
</script>
