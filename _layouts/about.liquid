---
layout: default
---
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<style>
* {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}

html, body {
    height: 100%;
    width: 100%;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
}

body {
    background: white;
    margin: 0;
    padding: 0;
}

.video-background {
    position: relative;
    width: 100%;
    height: 100vh; /* Make video section occupy full viewport height */
    overflow: hidden;
}

.video-background video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.video-overlay {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white;
    text-align: center;
    width: 80%;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    font-family: 'Helvetica', 'Arial', sans-serif;
    padding: 20px;
}

.video-overlay h1 {
    font-size: 2.5vw; /* Responsive font size based on viewport width */
    margin-bottom: 1rem;
    font-weight: bold;
    text-shadow: 4px 4px 8px rgba(0, 0, 0, 0.8);
    letter-spacing: 2px;
}

.tag-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 20px;
    list-style: none;
    padding: 0;
    animation: fadeIn 2s ease-in-out;
}

.tag-list li {
    margin: 10px;
    font-weight: bold;
    color: #f2f2f2;
    background: rgba(0, 0, 0, 0.5);
    padding: 5px 10px;
    border-radius: 5px;
    transition: transform 0.3s ease, background-color 0.3s ease;
    font-size: 1.5vw; /* Responsive font size for tags */
}

.tag-list li:hover {
    transform: scale(1.1);
    background-color: rgba(0, 0, 0, 0.7);
}

.btn-explore {
    display: inline-block;
    padding: 0.8vw 1.6vw;
    background-color: rgba(255, 255, 255, 0.9);
    color: black;
    margin: 30px;
    text-decoration: none;
    border-radius: 50px;
    font-weight: bold;
    font-size: 1.5vw; /* Responsive font size for button */
    box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    transition: background-color 0.3s, color 0.3s;
    border: 2px solid rgba(255, 255, 255, 0.9);
}

.btn-explore:hover {
    background-color: rgba(255, 255, 255, 1);
    color: black;
    border: 2px solid rgba(255, 255, 255, 1);
    text-decoration: none;
}

/* Responsive Design */
@media (max-width: 768px) {
    .video-overlay h1 {
        font-size: 4vw; /* Adjust font size for tablets */
    }

    .tag-list li {
        font-size: 2.5vw; /* Adjust font size for tags on smaller screens */
    }

    .btn-explore {
        font-size: 2.5vw; /* Adjust font size for button */
        padding: 1.5vw 3vw; /* Adjust padding for button */
    }
}

@media (max-width: 576px) {
    .video-overlay h1 {
        font-size: 5vw; /* Adjust font size for mobile devices */
    }

    .tag-list li {
        font-size: 3.5vw; /* Adjust font size for tags on small screens */
    }

    .btn-explore {
        font-size: 3.5vw; /* Adjust font size for button */
        padding: 2vw 4vw; /* Adjust padding for button */
    }
}

.carousel-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
    margin-top: 50px;
}

.carousel-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    overflow-x: scroll;
    scroll-behavior: smooth;
    padding: 0; /* Removed padding to eliminate space between images */
}

.carousel-container::-webkit-scrollbar {
    display: none; /* Hide scrollbar */
}

.carousel-card {
    flex: 0 0 calc(33.33%); /* Show three cards at once */
    height: 350px; /* Set height */
    position: relative;
    transition: transform 0.5s ease-in-out;
}

.carousel-card img {
    width: 100%;
    height: 100%; /* Maintain full height of the card */
    object-fit: cover; /* Ensure the image scales without being cropped */
    cursor: pointer;
    transition: transform 0.5s ease-in-out;
    border-radius: 0; /* No rounded corners */
}

.carousel-card-info {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%; /* Cover the entire card */
    background: rgba(0, 0, 0, 0.5); /* Slightly black, transparent background */
    color: white; /* White text */
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    padding: 10px;
    opacity: 0;
    transition: opacity 0.3s ease;
    text-align: center;
    font-family: 'Poppins', sans-serif;
    font-color: white; /* Set the font color to white */
}

.carousel-card:hover .carousel-card-info {
    opacity: 1; /* Show the text and background on hover */
}

/* Navigation Buttons */
.carousel-nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 50px;
    height: 50px;
    background-color: rgba(0, 0, 0, 0.5);
    color: white;
    border: none;
    border-radius: 50%;
    cursor: pointer;
    z-index: 10;
}

.carousel-card-info h3,
.carousel-card-info p {
    color: white;
}
.carousel-nav:hover {
    background-color: rgba(0, 0, 0, 0.7);
}

.carousel-nav-left {
    left: 10px;
}

.carousel-nav-right {
    right: 10px;
}

/* Responsive Design */
@media (max-width: 1200px) {
    .carousel-card {
        flex: 0 0 calc(50%); /* Show two cards at once */
        height: 280px; /* Adjust height */
    }
}

@media (max-width: 992px) {
    .carousel-card {
        flex: 0 0 calc(50%); /* Show two cards at once */
        height: 250px; /* Adjust height */
    }
}

@media (max-width: 768px) {
    .carousel-card {
        flex: 0 0 calc(100%); /* Show one card at a time */
        height: 200px; /* Adjust height */
    }
}

@media (max-width: 576px) {
    .carousel-card {
        height: 300px; /* Adjust height */
    }

    .carousel-card-info h3 {
        font-size: 1.2rem;
    }

    .carousel-card-info p {
        font-size: 0.9rem;
    }
}

/* Keyframes for animation */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(-20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}
</style>

<div class="video-background">
    <video autoplay loop muted playsinline>
        <source src="assets/video/bg.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
    <div class="video-overlay">
        <h1 style="color: white;">Sustainable Livestock Production System (SLPS) Lab</h1>
        <ul class="tag-list">

            <li>Feed Efficiency</li>
            <li>Genomics</li>
            <li>Greenhouse Gas Emissions</li>
            <li>Animal Welfare</li>
            <li>Machine Learning</li>
        </ul>
        <a href="" class="btn-explore">Join Us</a>
    </div>
</div>

<div class="post" style="margin-top: 50px;">
    <h2 style="text-align: center; font-weight: bold; animation: fadeIn 2s;">About Us</h2>
    <hr>
    <div class="clearfix">{{ content }}</div>

    <!-- Image Carousel -->
    <h2 style="text-align: center; font-weight: bold; margin-top: 50px;">Our Projects</h2>
    <hr>
    <div class="carousel-wrapper">
        <!-- Left Navigation Button -->
        <button class="carousel-nav carousel-nav-left" onclick="slideLeft()">&#8249;</button>

        <div class="carousel-container" id="imageCarousel">
            {% for project in site.projects %}
            <a href="{% if project.redirect %}{{ project.redirect }}{% else %}{{ project.url | relative_url }}{% endif %}" class="carousel-card">
                <img src="{{ project.img }}" alt="{{ project.title }}">
                <div class="carousel-card-info">
                    <p>{{ project.description }}</p>
                </div>
            </a>
            {% endfor %}
        </div>

        <!-- Right Navigation Button -->
        <button class="carousel-nav carousel-nav-right" onclick="slideRight()">&#8250;</button>
    </div>

    <!-- News -->
    {% if page.news and site.announcements.enabled %}
    <h2>
        <a href="{{ '/news/' | relative_url }}" style="color: inherit">News</a>
    </h2>
    {% include news.liquid limit=true %}
    {% endif %}

    <!-- Selected papers -->
    {% if page.selected_papers %}
    <h2>
        <a href="{{ '/publications/' | relative_url }}" style="color: inherit">Selected Publications</a>
    </h2>
    {% include selected_papers.liquid %}
    {% endif %}

    <!-- Social -->
    {% if page.social %}
    <div class="social">
        <div class="contact-icons">{% include social.liquid %}</div>
        <div class="contact-note">{{ site.contact_note }}</div>
    </div>
    {% endif %}

    {% if site.newsletter.enabled and site.footer_fixed %}
    {% include scripts/newsletter.liquid center=true %}
    {% endif %}
</div>

<!-- Ensure Bootstrap and jQuery are included -->
