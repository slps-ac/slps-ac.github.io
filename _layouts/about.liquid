<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
<script src="https://stackpath.herokuapp.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
    const carousel = document.getElementById('imageCarousel');
    let scrollAmount = 0;

    function slide() {
        const maxScrollLeft = carousel.scrollWidth - carousel.clientWidth;
        if (scrollAmount >= maxScrollLeft) {
            scrollAmount = 0;
        } else {
            scrollAmount += carousel.clientWidth / 3; // Slide one card width at a time
        }
        carousel.scrollTo({
            top: 0,
            left: scrollAmount,
            behavior: 'smooth'
        });
    }

    function slideLeft() {
        scrollAmount -= carousel.clientWidth / 3;
        if (scrollAmount < 0) {
            scrollAmount = 0;
        }
        carousel.scrollTo({
            top: 0,
            left: scrollAmount,
            behavior: 'smooth'
        });
    }

    function slideRight() {
        const maxScrollLeft = carousel.scrollWidth - carousel.clientWidth;
        scrollAmount += carousel.clientWidth / 3;
        if (scrollAmount > maxScrollLeft) {
            scrollAmount = maxScrollLeft;
        }
        carousel.scrollTo({
            top: 0,
            left: scrollAmount,
            behavior: 'smooth'
        });
    }

    setInterval(slide, 5000); // Adjust the interval to 5 seconds for a slower slide
</script>
