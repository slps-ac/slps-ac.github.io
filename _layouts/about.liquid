---
layout: default
---
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<style>
* {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}

html, body {
    height: 100%;
    width: 100%;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
}

body {
    background: white;
    margin: 0;
    padding: 0;
}

.video-background {
    position: relative;
    width: 100%;
    height: 100vh; /* Make video section occupy full viewport height */
    overflow: hidden;
}

.video-background video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.video-overlay {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white;
    text-align: center;
    width: 80%;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    font-family: 'Helvetica', 'Arial', sans-serif;
    padding: 20px;
}

.video-overlay h1 {
    font-size: 2.9vw; /* Responsive font size based on viewport width */
    margin-bottom: 1rem;
    font-weight: bold;
    text-shadow: 4px 4px 8px rgba(0, 0, 0, 0.8); /* Add a more prominent shadow */
    letter-spacing: 2px; /* Add some spacing between the letters */
}

.tag-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 20px;
    list-style: none;
    padding: 0;
    animation: fadeIn 2s ease-in-out;
}

.tag-list li {
    margin: 20px;
    font-weight: bold;
    color: #f2f2f2;
    background: rgba(0, 0, 0, 0.5);
    padding: 5px 10px;
    border-radius: 5px;
    transition: transform 0.3s ease, background-color 0.3s ease;
}

.tag-list li:hover {
    transform: scale(1.1);
    background-color: rgba(0, 0, 0, 0.7);
}

.video-overlay p {
    font-size: 1.25rem;
    margin-bottom: 2rem;
}

.btn-explore {
    display: inline-block;
    padding: 0.8vw 1.6vw; /* Smaller padding */
    background-color: rgba(255, 255, 255, 0.9); /* Slightly more opaque background */
    color: black;
    margin: 30px;
    text-decoration: none; /* No underline by default */
    border-radius: 50px;
    font-weight: bold;
    font-size: 1.5vw; /* Smaller font size */
    box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    transition: background-color 0.3s, color 0.3s;
    border: 2px solid rgba(255, 255, 255, 0.9); /* Add a border to match background */
}

.btn-explore:hover {
    background-color: rgba(255, 255, 255, 1); /* Fully opaque background on hover */
    color: black;
    border: 2px solid rgba(255, 255, 255, 1); /* Solid border on hover */
    text-decoration: none; /* Ensure no underline on hover */
}


.carousel-container {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    width: 100%;
    overflow-x: hidden;
    scroll-behavior: smooth;
    padding: 20px 0;
    position: relative;
}

.carousel-container::-webkit-scrollbar {
    display: none; /* Hide scrollbar */
}

.carousel-card {
    flex: 0 0 33.33%;
    height: 300px;
    position: relative;
    transition: transform 0.5s ease-in-out;
}

.carousel-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    cursor: pointer;
    transition: transform 0.5s ease-in-out;
    border: none; /* No border */
}

.carousel-card:hover {
    transform: scale(1.1);
    z-index: 1;
}

.carousel-card-info {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(50, 50, 50, 0.7);
    color: white;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 20px;
    opacity: 0;
    transition: opacity 0.3s ease;
    text-align: center;
    font-family: 'Poppins', sans-serif;
}

.carousel-card:hover .carousel-card-info {
    opacity: 1;
}

.carousel-card-info h3 {
    margin: 0;
    font-size: 1.5rem;
    font-weight: bold;
    color: white;
}

.carousel-card-info p {
    margin: 10px 0 0;
    font-size: 1rem;
    font-style: italic;
    color: rgba(191, 191, 191, 0.5);
}

/* Navigation Buttons */
.carousel-nav {
    position: absolute; /* Positioned relative to the carousel container */
    top: 50%;
    transform: translateY(-50%);
    width: 50px;
    height: 50px;
    background-color: rgba(0, 0, 0, 0.5);
    color: white;
    border: none;
    border-radius: 50%;
    cursor: pointer;
    z-index: 10;
}

.carousel-nav:hover {
    background-color: rgba(0, 0, 0, 0.7);
}

.carousel-nav-left {
    left: 10px; /* Keep this fixed to the left edge of the carousel */
}

.carousel-nav-right {
    right: 10px; /* Keep this fixed to the right edge of the carousel */
}

/* Responsive Design */
@media (max-width: 1200px) {
    .video-overlay h1 {
        font-size: 5vw; /* Smaller font size for slightly smaller screens */
    }

    .btn-explore {
        padding: 1.2vw 2.3vw; /* Adjust button size for this screen size */
        font-size: 2.2vw; /* Adjust font size */
    }
}

@media (max-width: 992px) {
    .carousel-card {
        flex: 0 0 50%;
        height: 250px;
    }

    .video-overlay h1 {
        font-size: 6vw; /* Smaller font size for smaller screens */
    }

    .btn-explore {
        padding: 1.2vw 2.4vw; /* Adjust button size for this screen size */
        font-size: 2.5vw; /* Adjust font size */
    }
}

@media (max-width: 768px) {
    .carousel-card {
        flex: 0 0 100%;
        height: 200px;
    }

    .video-overlay h1 {
        font-size: 5vw; /* Smaller font size for tablets */
    }

    .btn-explore {
        padding: 2vw 4vw; /* Adjust button size for tablets */
        font-size: 3vw; /* Adjust font size */
    }
}

@media (max-width: 576px) {
    .video-overlay {
        width: 90%;
    }

    .video-overlay h1 {
        font-size: 4vw; /* Smaller font size for mobile devices */
    }

    .video-overlay p {
        font-size: 1rem;
    }

    .btn-explore {
        padding: 2.5vw 5vw; /* Adjust button size for mobile devices */
        font-size: 3.5vw; /* Adjust font size */
    }

    .carousel-card {
        height: 150px;
    }

    .carousel-card-info h3 {
        font-size: 1.2rem;
    }

    .carousel-card-info p {
        font-size: 0.9rem;
    }
}

/* Keyframes for animation */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(-20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}
</style>

<div class="video-background">
    <video autoplay loop muted playsinline>
        <source src="assets/video/bg.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
    <div class="video-overlay">
        <h1 style="color: white;">Sustainable Livestock Production System (SLPS) Lab</h1>
        <ul class="tag-list">
            <li>Feed Efficiency</li>
            <li>Greenhouse Gas Emissions</li>
            <li>Animal Welfare</li>
            <li>Machine Learning</li>
        </ul>
        <a href="" class="btn-explore">Join Us</a>
    </div>
</div>

<div class="post" style="margin-top: 50px;">
    <h2 style="text-align: center; font-weight: bold; animation: fadeIn 2s;">About Us</h2>
    <hr>
    <div class="clearfix">{{ content }}</div>

    <!-- Image Carousel -->
    <h2 style="text-align: center; font-weight: bold; margin-top: 50px;">Our Projects</h2>
    <hr>
    <div class="carousel-container" id="imageCarousel" >
        <!-- Left Navigation Button -->
        <button class="carousel-nav carousel-nav-left" onclick="slideLeft()">&#8249;</button>

        {% for project in site.projects %}
        <a href="{% if project.redirect %}{{ project.redirect }}{% else %}{{ project.url | relative_url }}{% endif %}" class="carousel-card">
            <img src="{{ project.img }}" alt="{{ project.title }}">
            <div class="carousel-card-info">
                <h3>{{ project.title }}</h3>
                <p>{{ project.description }}</p>
            </div>
        </a>
        {% endfor %}

        <!-- Right Navigation Button -->
        <button class="carousel-nav carousel-nav-right" onclick="slideRight()">&#8250;</button>
    </div>

    <!-- News -->
    {% if page.news and site.announcements.enabled %}
    <h2>
        <a href="{{ '/news/' | relative_url }}" style="color: inherit">News</a>
    </h2>
    {% include news.liquid limit=true %}
    {% endif %}

    <!-- Selected papers -->
    {% if page.selected_papers %}
    <h2>
        <a href="{{ '/publications/' | relative_url }}" style="color: inherit">Selected Publications</a>
    </h2>
    {% include selected_papers.liquid %}
    {% endif %}

    <!-- Social -->
    {% if page.social %}
    <div class="social">
        <div class="contact-icons">{% include social.liquid %}</div>
        <div class="contact-note">{{ site.contact_note }}</div>
    </div>
    {% endif %}

    {% if site.newsletter.enabled and site.footer_fixed %}
    {% include scripts/newsletter.liquid center=true %}
    {% endif %}
</div>

<!-- Ensure Bootstrap and jQuery are included -->
